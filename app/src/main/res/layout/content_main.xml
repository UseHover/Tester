<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hover.tester.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/amount"
                android:hint="@string/hint_amount"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/phone"
                      android:hint="@string/hint_recip"
                      android:textColor="?attr/colorPrimaryDark"
                      android:textSize="14sp"
                      android:inputType="number"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/merchant"
                      android:hint="@string/hint_biz"
                      android:textColor="?attr/colorPrimaryDark"
                      android:textSize="14sp"
                      android:inputType="number"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/paybill"
                      android:hint="@string/hint_bill"
                      android:textColor="?attr/colorPrimaryDark"
                      android:textSize="14sp"
                      android:inputType="number"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/paybill_acct"
                      android:hint="@string/hint_acct"
                      android:textColor="?attr/colorPrimaryDark"
                      android:textSize="14sp"
                      android:inputType="text"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/detected_actions"/>

        <LinearLayout android:id="@+id/actions"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
